        "otherworldy-patrons": {
            "the-archfey": {
                "description": "You patron is a lord or lady of the fey, who holds forgotten secrets. This being's inscrutable, whimsical motivations might involve striving for greater magical power, or settling age-old grudges. Beings of this sort include the Prince Of Frost, the Queen of Air and Darkness, and Titania of the summer court.",
                "spells": [
                    "faerie-fire",
                    "sleep"
                ],
                "features": [
                    "fey-presence"
                ]
            },
            "the-fiend": {
                "description": "You have made a pact with a fiend from the lower planes of existence, a being whose aims are evil, even if you strive against those aims. Such beings desire the corruption or destruction of all things. Examples are Archdevils like Mephistopholes and Belial, and demon lords such as Baphomet and the Demogorgon.",
                "spells": [
                    "burning-hands",
                    "command"
                ],
                "features": [
                    "dark-ones-blessing"
                ]
            },
            "the-great-old-one": {
                "description": "Your patron is mysterious entity whose nature is utterly foreign to the fabric of reality. It might come from the Far Realm, the space beyond reality, or it could be one the forgotten Elder Gods. Examples include Ghaundar, called That Which Lurks; Tharizdun, the Chained God; Great Cthulhu, and other Unfathomable beings",
                "spells": [
                    "dissonant-whispers",
                    "tashas-hideous-laughter"
                ],
                "features": [
                    "awakened-mind"
                ]
            }
        }
